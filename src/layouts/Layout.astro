---
export interface Props {
  title?: string;
}

const { title = "funcity" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body>
    <header class="site-header">
      <h1 class="site-title">funcity.club</h1>
    </header>
    <slot />
    <footer class="site-footer">
      <p>&copy; 2025 funcity</p>
    </footer>
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: Helvetica, sans-serif;
    line-height: 1.6;
    color: #333;
  }

  .site-header {
    padding: 2rem 1rem;
    text-align: center;
    border-bottom: 1px solid #eee;
  }

  .site-title {
    font-family: Impact, sans-serif;
    font-size: 3rem;
    color: #ff6b35;
    letter-spacing: -0.02em;
  }

  .site-footer {
    padding: 2rem 1rem;
    text-align: center;
    border-top: 1px solid #eee;
    margin-top: 2rem;
    color: #666;
    font-size: 0.9rem;
  }

  @media (max-width: 768px) {
    .site-title {
      font-size: 2.5rem;
    }
  }
</style>
