---
export interface Props {
  title?: string;
}

const { title = "funcity" } = Astro.props;

import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body>
    <header class="site-header">
      <h1 class="site-title">funcity.club</h1>
    </header>
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    /* theme color palette */
    --color-graphite: rgb(60, 58, 55);
    --color-chocolate: rgb(110, 57, 1);
    --color-cookie: rgb(196, 127, 111);
    --color-ceramic: rgb(244, 201, 165);
    --color-milk: rgb(250, 245, 235);
    --color-crema: rgb(247, 147, 2);
    --color-carrot: #ff6b35;
    --color-cherry: rgb(214, 6, 26);

    --color-barely-there: var(--color-ceramic);
    --color-discreet: var(--color-cookie);
    --color-accent-primary: var(--color-carrot);

    --font-family-heading: Impact, sans-serif;
    --font-family-content: Helvetica, sans-serif;
    --font-size-base: 1rem;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: var(--font-family-content);
    line-height: 1.6;
    color: var(--color-graphite);
  }

  .site-header {
    padding: 2rem 1rem;
    text-align: center;
    border-bottom: 1px solid var(--color-barely-there);
  }

  .site-title {
    font-family: var(--font-family-heading);
    font-size: 3rem;
    color: var(--color-accent-primary);
    letter-spacing: -0.02em;
  }

  @media (max-width: 768px) {
    .site-title {
      font-size: 2.5rem;
    }
  }
</style>
